# 后端服务环境变量配置示例
# 复制此文件为 .env 并修改对应的值

# ========== 服务配置 ==========
SERVER_PORT=8080
SERVER_ADDRESS=:8080

# ========== 数据库配置 ==========
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=what-ims-db
DB_CHARSET=utf8mb4
DB_MAX_IDLE=5
DB_MAX_OPEN=20

# ========== Redis配置 ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========== JWT配置 ==========
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ACCESS_EXPIRY=120
JWT_REFRESH_EXPIRY=7

# ========== 日志配置 ==========
LOG_LEVEL=info
LOG_OUTPUT_PATH=logs/app.log

# ========== 微信支付配置 ==========
WECHAT_PAY_APP_ID=
WECHAT_PAY_MCH_ID=
WECHAT_PAY_API_KEY=
WECHAT_PAY_NOTIFY_URL=

# ========== 文件存储配置 ==========
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET_NAME=
OSS_ENDPOINT=
OSS_CDN_URL=
