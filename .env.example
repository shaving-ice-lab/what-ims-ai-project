# 供应链订货系统 - 环境变量配置示例
# 复制此文件为 .env 并修改对应的值

# ========== 后端服务配置 ==========
# 服务端口
SERVER_PORT=8080
SERVER_ADDRESS=:8080

# ========== 数据库配置 ==========
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=what-ims-db
DB_CHARSET=utf8mb4

# ========== Redis配置 ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========== JWT配置 ==========
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ACCESS_EXPIRY=120    # 访问令牌有效期（分钟）
JWT_REFRESH_EXPIRY=7     # 刷新令牌有效期（天）

# ========== 日志配置 ==========
LOG_LEVEL=info           # debug, info, warn, error
LOG_OUTPUT_PATH=logs/app.log

# ========== 前端配置 ==========
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_UPLOAD_URL=http://localhost:8080/api/upload
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ========== 移动端配置 ==========
TARO_APP_API_URL=http://localhost:8080/api

# ========== 第三方服务配置 ==========
# 微信支付配置
WECHAT_PAY_APP_ID=
WECHAT_PAY_MCH_ID=
WECHAT_PAY_API_KEY=
WECHAT_PAY_NOTIFY_URL=

# 阿里云OSS配置
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET_NAME=
OSS_ENDPOINT=
OSS_CDN_URL=
